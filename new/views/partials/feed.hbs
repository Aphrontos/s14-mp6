<!-- Article Feed -->
<div class="card-wrapper">
<div class="feed">
    {{#each articles}}<div class="card card-has-margin">
        <a href="{{this.key}}">
            <!-- Article Image -->
            <div class="card-img">
                <!-- Dimmer + Vignette -->
                <div class="image-dimmer"></div>
                <img src="img/articles/{{this.key}}.{{this.imgext}}">
                <!-- Tag -->
                <div class="tag-wrapper">
                    <a href="{{this.category}}" class="tag-block"><p>{{this.category}}</p></a>
                </div>
            </div>
            <!-- Article Description -->
            <div class="card-container">
                <div class="text-block text-dark">
                    <h4>{{this.title}}</h4>
                    <p>{{this.date}} â€¢ {{this.author}}</p>
                    <p>{{this.text_preview}}...</p>
                </div>
            </div>
        </a>
    </div>{{/each}}
</div>
</div>